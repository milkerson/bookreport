<p id="notice"><%= notice %></p>

<h2>My Books</h2>

<%= link_to 'New Book', new_book_path, class: "btn btn-primary pull-right" %>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Series</th>
      <th># pages</th>
      <th>Isbn</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.series %></td>
        <td><%= book.num_pages %></td>
        <td><%= book.isbn %></td>
        <td><%= book.genre %></td>
        <td><%= link_to 'Show', book, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
